@model List<Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Users" asp-action="CreateProduct" class="btn btn-primary">
                Create
            </a>
        </div>
    </div>
<table class=" table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Price
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Users" asp-action="EditProduct" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            Edit
                        </a>
                            <a asp-controller="Users" asp-action="DeleteProduct" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>